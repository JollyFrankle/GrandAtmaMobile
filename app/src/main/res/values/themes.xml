<resources>
    <!-- Base application theme. -->
    <style name="Theme.GrandAtmaHotel" parent="Theme.Material3.Light">
        <item name="fontFamily">@font/gabarito</item>
        <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="Theme.GrandAtmaHotel.NoActionBar" parent="Theme.Material3.Light.NoActionBar">
        <item name="fontFamily">@font/gabarito</item>
        <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="Theme.GrandAtmaHotel.TranslucentStatusBar" parent="Theme.GrandAtmaHotel.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="GAH.LoadingDialog" parent="Theme.Material3.Light.Dialog">
        <item name="windowMinWidthMajor">0%</item>
        <item name="windowMinWidthMinor">0%</item>
        <item name="backgroundColor">@color/white</item>
    </style>
    
    <style name="GAH.Buttons.Primary" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="GAH.Buttons.Secondary" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="GAH.Buttons.Link" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="GAH.Buttons.Link.Dense" parent="GAH.Buttons.Link">
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="GAH.NavigationActive" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/secondary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="GAH.TableCell" parent="Widget.AppCompat.TextView">
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">8dp</item>
    </style>

    <style name="GAH.TableCell.Heading" parent="GAH.TableCell">
        <item name="android:textColor">@color/muted_foreground</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>